<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ExerciseHome" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. Used for the app bar (Toolbar). -->
        <item name="colorPrimary">@color/toolbar_background</item>

        <!-- Color for text and icons on top of the primary color. -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- The main background color for the app screen. -->
        <item name="android:windowBackground">@color/app_background</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Default text color for the app -->
        <item name="android:textColor">@color/white</item>

        <!-- For the overflow menu icon itself (the three dots) -->
        <item name="actionOverflowButtonStyle">@style/Widget.App.OverflowButton</item>

        <!-- UPDATED: Point to a theme overlay that will style the popup menu. -->
        <item name="popupTheme">@style/App.PopupMenuTheme</item>
    </style>

    <!-- UPDATED: A theme overlay for the popup menu. -->
    <style name="App.PopupMenuTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- This sets the background color of the popup menu itself -->
        <item name="android:background">@color/white</item>
        <!-- This sets the text color of the items in the popup menu -->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style to make the three-dots overflow icon white -->
    <style name="Widget.App.OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint" tools:targetApi="l">@color/white</item>
    </style>

</resources>
